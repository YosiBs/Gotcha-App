<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment"
    android:background="#1976D2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_IMG_profile"
            android:layout_width="@dimen/user_image_width"
            android:layout_height="@dimen/user_image_height"
            tools:src="@drawable/image_placeholder"
            android:layout_marginLeft="@dimen/user_image_marginLeft"
            android:layout_marginRight="@dimen/user_image_marginRight"
            />

        <!-- TODO: Update blank fragment layout -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_frag_text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hello User"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/user_name_text_size"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_LST_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:listitem="@layout/horizontal_product_item"
        android:layout_marginTop="@dimen/product_list_marginTop"
        />


</FrameLayout>